<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/ls"
        android:layout_width="343dp"
        android:layout_height="562dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundshape"
        android:backgroundTint="@color/white"
        android:verticalScrollbarPosition="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="342dp"
        android:layout_height="63dp"
        android:layout_marginTop="12dp"
        android:onClick="RefreshData"
        android:text="@string/refreshbutton"
        app:layout_constraintEnd_toEndOf="@+id/ls"
        app:layout_constraintStart_toStartOf="@+id/ls"
        app:layout_constraintTop_toBottomOf="@+id/ls" />

    <Button
        android:id="@+id/button"
        android:layout_width="341dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:onClick="CommentScreen"
        android:text="@string/inputbutton"
        app:layout_constraintEnd_toEndOf="@+id/refresh"
        app:layout_constraintStart_toStartOf="@+id/refresh"
        app:layout_constraintTop_toBottomOf="@+id/refresh" />
</androidx.constraintlayout.widget.ConstraintLayout>